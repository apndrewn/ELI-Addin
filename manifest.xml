<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
  xsi:type="TaskPaneApp">

  <Id>b29c3890-4422-4988-ad9a-582345609988</Id> <Version>1.0.0.0</Version>
  <ProviderName>Colgate Legal Ops</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Colgate ELI" />
  <Description DefaultValue="Enhanced Legal Intelligence: AI-powered contract review and drafting assistant." />

  <IconUrl DefaultValue="https://apndrewn.github.io/ELI-Addin/assets/icon-80.png" />
  <HighResolutionIconUrl DefaultValue="https://apndrewn.github.io/ELI-Addin/assets/icon-80.png" />
  <SupportUrl DefaultValue="https://apndrewn.github.io/ELI-Addin/help.html" />

  <Hosts>
    <Host Name="Document" />
  </Hosts>
  <DefaultSettings>
    <SourceLocation DefaultValue="https://apndrewn.github.io/ELI-Addin/taskpane.html" />
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>
  <AppDomains>
    <AppDomain>https://eli-backend.vercel.app</AppDomain>
    <AppDomain>https://apndrewn.github.io</AppDomain>
  </AppDomains>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Word">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <CustomTab id="TabColgateEli">
              <Label xsi:type="bt:String" bt:value="Colgate AI" />
              <Group id="GrpEliMain">
                <Label xsi:type="bt:String" bt:value="Legal Tools" />
                <Icon>
                  <bt:Image size="16" bt:value="https://apndrewn.github.io/ELI-Addin/icon-80.png" />
                  <bt:Image size="32" bt:value="https://apndrewn.github.io/ELI-Addin/icon-80.png" />
                  <bt:Image size="80" bt:value="https://apndrewn.github.io/ELI-Addin/icon-80.png" />
                </Icon>
                
                <Control xsi:type="Button" id="BtnOpenEli">
                  <Label xsi:type="bt:String" bt:value="Launch ELI" />
                  <Supertip>
                    <Title bt:value="Colgate ELI" />
                    <Description bt:value="Open the AI Legal Assistant." />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" bt:value="https://apndrewn.github.io/ELI-Addin/icon-80.png" />
                    <bt:Image size="32" bt:value="https://apndrewn.github.io/ELI-Addin/icon-80.png" />
                    <bt:Image size="80" bt:value="https://apndrewn.github.io/ELI-Addin/icon-80.png" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>EliTaskpane</TaskpaneId>
                    <SourceLocation bt:value="https://apndrewn.github.io/ELI-Addin/taskpane.html" />
                  </Action>
                </Control>
              </Group>
            </CustomTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
  </VersionOverrides>
</OfficeApp>